{
  "name": "{{ WORKSPACE_NAME }}",
  "type": ["terraform_v0.12"],
  "description": "IBM Cloud Schematics Workspace to deploy an OpenShift cluster sandbox with Portworx on IBM Cloud Classic or Gen2 VPC",
  "tags": [
    "owner:{{ OWNER }}",
    "env:{{ ENV }}",
    "project:{{ PROJECT }}"
  ],
  "resource_group": "cloud-pak-sandbox",
  "template_repo": {
    "url": "https://github.com/ibm-hcbt/terraform-ibm-cloud-pak",
    "branch": "{{ BRANCH }}"
  },
  "template_data": [
    {
      "folder": "examples/roks",
      "type": "terraform_v0.12",
      "variablestore": [
        { 
          "name": "on_vpc",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "flavors",
          "value": "[\"bx2.16x64\"]",
          "type": "list(string)"
        },
        {
          "name": "install_portworx",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "region",
          "value": "us-east",
          "type": "string"
        },
        {
          "name": "ibmcloud_api_key",
          "value": "{{ IC_API_KEY }}", 
          "type": "string",
          "secure": true
        },
        {
          "name": "project_name",
          "value": "{{ PROJECT }}",
          "type": "string"
        },
        {
          "name": "owner",
          "value": "{{ OWNER }}",
          "type": "string"
        },
        {
          "name": "environment",
          "value": "{{ ENV }}",
          "type": "string"
        },
        {
          "name": "resource_group",
          "value": "cloud-pak-sandbox",
          "type": "string"
        },
        {
          "name": "cluster_id",
          "value": "",
          "type": "string"
        },
        {
          "name": "datacenter",
          "value": "",
          "type": "string"
        },
        {
          "name": "vpc_zone_names",
          "value": "[\"us-east-1\"]",
          "type": "list(string)"
        },
        {
          "name": "private_vlan_number",
          "value": "",
          "type": "string"
        },
        {
          "name": "public_vlan_number",
          "value": "",
          "type": "string"
        },
        {
          "name": "storage_capacity",
          "value": "200",
          "type": "number"
        },
        {
          "name": "storage_iops",
          "value": "10",
          "type": "number"
        },
        {
          "name": "storage_profile",
          "value": "10iops-tier",
          "type": "string"
        },
        {
          "name": "create_external_etcd",
          "value": "false",
          "type": "bool"
        },
        {
          "name": "etcd_username",
          "value": "",
          "type": "string"
        },
        {
          "name": "etcd_password",
          "value": "",
          "type": "string"
        }
      ]
    }
  ]
}
